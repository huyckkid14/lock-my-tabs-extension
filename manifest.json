{
  "manifest_version": 3,
  "name": "Lock My Tabs",
  "version": "1.5.1",
  "description": "Lock a tab with a password and inactivity timer, scoped per-site.",
  "permissions": [
    "storage",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "128": "assets/icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
